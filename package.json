{
  "name": "rekit-portal",
  "version": "2.0.0-alpha.4",
  "description": "Web app created with Rekit for managing a Rekit project.",
  "keywords": [
    "rekit",
    "react",
    "redux",
    "react-router"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/supnate/rekit-portal.git"
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "babel-preset-stage-0"
    ],
    "plugins": [
      "react-hot-loader/babel",
      "transform-decorators-legacy",
      "lodash",
      [
        "import",
        {
          "libraryName": "antd"
        }
      ],
      [
        "module-resolver",
        {
          "alias": {
            "src": "./src"
          }
        }
      ]
    ],
    "env": {
      "dev": {
        "plugins": []
      },
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "nyc": {
    "include": [
      "index.js",
      "src/**/*.js",
      "tools/lib/*.js"
    ],
    "exclude": [
      "tools/**/templates",
      ".tmp"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "cache": false,
    "sourceMap": false,
    "instrument": true
  },
  "rekit": {
    "version": "2.0.0-alpha.4",
    "devPort": 6078,
    "buildPort": 6079,
    "css": "less"
  },
  "theme": {
    "font-size-base": "14px"
  },
  "license": "MIT",
  "scripts": {
    "start": "node ./tools/server.js",
    "build": "node ./tools/build.js",
    "test": "node ./tools/run_test.js",
    "build:test": "node ./tools/server.js -m build"
  },
  "files": ["dist", "middleware"],
  "dependencies": {
    "body-parser": "^1.16.0",
    "socket.io": "^1.7.2",
    "watchpack": "^1.2.0"
  },
  "devDependencies": {
    "ansi-to-html": "^0.5.0",
    "antd": "^2.7.0",
    "axios": "^0.15.3",
    "babel-plugin-import": "^1.1.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.22.0",
    "compression": "^1.6.2",
    "core-decorators": "^0.15.0",
    "d3": "^4.5.0",
    "highlight.js": "^9.9.0",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.17.4",
    "prismjs": "^1.6.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.2",
    "react-router-redux": "^4.0.5",
    "redux": "^3.6.0",
    "redux-logger": "^2.6.1",
    "redux-thunk": "^2.2.0",
    "reselect": "^2.5.4",
    "style-loader": "^0.13.1",
    "argparse": "^1.0.7",
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.5",
    "babel-plugin-istanbul": "^3.1.2",
    "babel-plugin-lodash": "^3.2.8",
    "babel-plugin-module-resolver": "^2.2.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-register": "^6.22.0",
    "chai": "^3.5.0",
    "css-loader": "^0.26.1",
    "enzyme": "^2.7.1",
    "eslint": "^3.14.1",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-import-resolver-babel-module": "^2.0.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.9.0",
    "estraverse": "^4.2.0",
    "estraverse-fb": "^1.3.1",
    "express": "^4.14.1",
    "express-history-api-fallback": "^2.0.0",
    "file-loader": "^0.10.0",
    "jsdom": "^9.5.0",
    "less": "^2.7.2",
    "less-loader": "^2.2.3",
    "lodash-webpack-plugin": "^0.11.0",
    "mocha": "^3.0.2",
    "mocha-webpack": "^0.7.0",
    "nock": "^9.0.2",
    "npm-run": "^4.1.0",
    "nyc": "^10.1.2",
    "react-addons-test-utils": "^15.4.2",
    "react-hot-loader": "^3.0.0-beta.6",
    "redux-mock-store": "^1.2.2",
    "rekit-core": "next",
    "sinon": "^1.17.7",
    "url-loader": "^0.5.7",
    "webpack": "^2.2.1",
    "webpack-bundle-analyzer": "^2.2.1",
    "webpack-dev-middleware": "^1.8.4",
    "webpack-hot-middleware": "^2.16.1",
    "webpack-node-externals": "^1.3.3"
  }
}
